<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_card_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_trip_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/item_card_pic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_basic_add"
        android:background="@drawable/bg_base_gray_background"
        android:layout_gravity="center"
        android:padding="48dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/item_card_bg"
        app:layout_constraintEnd_toEndOf="@id/item_card_bg"
        app:layout_constraintTop_toTopOf="@id/item_card_bg"/>
    <View
        android:id="@+id/item_section1_view"
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_card_pic_iv"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_detail_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/item_card_bg"
        app:layout_constraintEnd_toEndOf="@id/item_card_bg"
        app:layout_constraintTop_toBottomOf="@id/item_section1_view">
        <View
            android:layout_width="5dp"
            android:layout_height="13dp"
            android:background="@color/tripbook_main_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/item_title_tv">
        </View>
        <TextView
            android:id="@+id/item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="비행기에서 만난 파란 하늘"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2021년 03월 10일"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/item_title_tv"
            app:layout_constraintStart_toStartOf="@id/item_title_tv"/>
        <View
            android:id="@+id/item_section2_view"
            android:layout_width="72dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_date_tv"/>
        <TextView
            android:id="@+id/item_content_tv"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            tools:text="무계획으로 전 날 예매를 하고 캐리어도 없이 비행기에 탔다! 조금 걱정..."
            android:textSize="8sp"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/item_section2_view"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_empty_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/item_card_bg"
        app:layout_constraintEnd_toEndOf="@id/item_card_bg"
        app:layout_constraintTop_toBottomOf="@id/item_section1_view"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="발자국을 기록해주세요"
            android:textSize="11sp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>